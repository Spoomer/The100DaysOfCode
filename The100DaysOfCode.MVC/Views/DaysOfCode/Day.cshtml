@model The100DaysOfCode.MVC.Models.DayOfCode

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Day Of Code</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>
    <b>@Html.DisplayNameFor(model => model.Goals)</b>
    <ul class="list-group">
        @foreach (var goal in Model?.Goals ?? new List<Goal>())
        {
            <li class="list-group-item">
                <input class="form-check-input me-1" type="checkbox" value="@goal.Check" aria-label="goal_reached">
                @goal.Name
            </li>
        }
    </ul>
    <b>@Html.DisplayNameFor(model => model.Notes)</b>
    <ul class="list-group">
        @foreach (var note in Model?.Notes ?? new List<Note>())
        {
            <li class="list-group-item">
                @note.Text
            </li>
        }
    </ul>
</div>
<div>
    <a asp-action="EditDay" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
